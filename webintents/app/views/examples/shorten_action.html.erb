<% content_for(:title) do %>Kinlan's Link Shortener<% end %>
<% content_for(:js) do %>
  <%= javascript_include_tag :webintents %>
  <intent
    action="http://webintents.org/shorten"
    type="text/uri-list"
    href="shorten.html"
    title="Kinlan's Link Shortener" />
  <%= javascript_include_tag :events %>
  <%= javascript_include_tag :common %>
  <style>
    iframe {
      float:left;
      width: 50%;
      height: 800px;
    }
  </style>
  <script>
    attachEventListener(window, "load", function() {
      var output = document.getElementById("output");
      setText(output, intent.data[0]);
      intent.postResult(["http://kin.ly/A" ]);
    }, false);
  </script>
<% end %>
<% content_for(:headline) do %>Kinlan's Link Shortener<% end %>
