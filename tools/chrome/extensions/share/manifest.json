{
  "name": "Share",
  "description" : "Share images, and links",
  "permissions": [
    "contextMenus",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "16.png"
  },
  "version": "0.0.0.1",
  "background_page": "background.html",
  "content_scripts" : [{
    "matches" : ["http://*/*", "https://*/*"],
    "js" :  ["startActivity.js"]
  },
  {
    "matches" : ["https://plus.google.com/"],
    "js" : ["plus.js"]
  },
  {
    "matches" : ["http://twitter.com/"],
    "js" : ["twitter.js"]
  }] 
}
